#palindrome
def palindrome(n):
    a=0
    for i in range(0,len(n)):
        if(n[i]!=n[len(n)-i-1] and i<(len(n)-i-1)):
            a+=1
            print("value is not palindrome")
            break
    if(a==0):
        print("value is palindrome")

x = list(input("enter the value you want to check for palindrome\n"))
palindrome(x)

